<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <h1><a href="/topic">Server Side JavaScript</a></h1>
    <ul>
        <% topics.forEach(function(topic){ %>
            <li><a href="/topic/<%=topic.id%>"><%= topic.title%></a></li>
        <%})%>
    </ul>
    <article>
        <form action="/topic/<%=topic.id%>/edit", method="post">
            <p>
                <input type="text", name="title", placeholder="title", value=<%=topic.title%>>
            </p>
            <p>
                <textarea name="description" placeholder="description"><%=topic.description%></textarea>
            </p>
            <p>
                <input type="text", name="author", placeholder="author", value=<%=topic.author%>>
            </p>
            <p>
                <input type="submit">
            </p>
        </form>
    </article>
    <ul>
        <li><a href="/topic/add">add</a><br></li>
    <% if(id) { %>
        <li><a href="/topic/<%=topic.id%>/edit">edit</a><br></li>
        <li><a href="/topic/<%=topic.id%>/delete">delete</a></li>
        <% } else{} %>
    </ul>
</body>
</html>